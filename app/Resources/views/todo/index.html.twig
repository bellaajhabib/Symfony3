{% extends 'base.html.twig' %}
{% block body %}
    <h2  class="page-header" >Lastest Todo</h2>
    <table class="table table-striped ">
        <thead>
        <tr>
            <th>#</th>
            <th>Todo</th>
            <th>Due Date</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>
            <td>{{ todo.dueDae|date('F j,Y,g:i a') }}</td>
             <td><a href="{{ app.request.getBaseURL() }}/todos/details/{{ todo.id }}" class="btn btn-success">View</a> </td>
            <td><a href="{{ app.request.getBaseURL() }}/todos/edit/{{ todo.id }}" class="btn btn-default">Edit</a> </td>
            <td><a href="{{ app.request.getBaseURL() }}/todos/delete/{{ todo.id }}" class="btn btn-danger">Delete</a> </td>
        </tr>

         {% endfor %}
        </tbody>
    </table>
{% endblock %}